@model IEnumerable<OGtech.Models.Asset>
@*
    Note: I've set the model for this view to IEnumerable<Customer>.
    This is a simple interface implemented by the list class. Since
    in this view we only want to iterate over this list, and we don't
    need any of the operations in the List class (eg Add, Remove, etc),
    it's better to use the IEnumerable interface, which allows use to
    iterate over the list. If in the future, we replace the List with a
    different data structure, as long as it is enumerable, our view code
    will remain unchanged.
*@

@{
    ViewBag.Title = "Asset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assets</h2>
<button type="button" class="btn btn-default">@Html.ActionLink("Add Asset", "newAsset", "Asset", null)</button><br /><br /><br />

@if (!Model.Any())
{
    <p>We don't have any Asset yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Asset</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Asset in Model)
            {
                <tr>
                    <td>@Asset.name</td>
                    <td>@Asset.Type.NameType</td>
                    <td><button type="button" class="btn btn-default">@Html.ActionLink("Edit", "Edit", "Asset", new { id = Asset.id }, null)</button>
                        <button type="button" class="btn btn-default">@Html.ActionLink("Delete", "Delete", "Asset", new { id = Asset.id }, null)</button></td>
                </tr>
            }
        </tbody>
    </table>
}
